= rails_admin_form_for @object, url: rails_admin.update_configuration_path(model_name: "configuration", id: @object.id), as: @abstract_model.param_key, html: { method: "post", multipart: true, class: "form-horizontal denser", data: { title: @page_name } } do |form|

  %div.form-group.control-group
    %label.col-sm-2.control-label
      XLS or CSV
    %div.col-sm-10.controls
      = form.file_field(:data, { data: { fileupload: true }})

  .form-group.form-actions
    .col-sm-offset-2.col-sm-10
      %input{type: :hidden, name: 'return_to', value: (params[:return_to].presence || request.referer)}
      %button.btn.btn-primary{type: "submit", name: "_save", :'data-disable-with' => t("admin.actions.update_configuration.diff")}
        %i.icon-white.icon-ok
        = t("admin.actions.update_configuration.diff")
      %span.extra_buttons
        %button.btn.btn-default{type: "submit", name: "_continue", :'data-disable-with' => t("admin.form.cancel"), :formnovalidate => true}
          %i.icon-remove
          = t("admin.form.cancel")
