= form_tag(rails_admin.leaderboard_path(model_name: 'arcade~winner'), method: 'get', class: 'form-inline') do

  %div.form-group
    %label
      Date
    = text_field_tag :date, nil, class: 'form-control datepicker', data: { default_date: request.params[:date] || Time.now.end_of_week.to_s(:db) }

  %div.form-group
    %label
      Challenge ID
    = select_tag :challenge_id, options_from_collection_for_select(@challenges, :first, :last, request.params[:challenge_id] || @challenges.first.first), class: 'form-control'

  %button.btn.btn-primary.mb2{type: "submit"}
    %i.icon-white.icon-ok
    = t("admin.actions.leaderboard.find")
= render partial: 'leaderboard_table', locals: { type: 'weekly' }

